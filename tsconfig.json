{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./lib",
      "skipLibCheck": true,
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "lib/**/*",
      "../index.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }